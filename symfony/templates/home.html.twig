{% extends '_layout.html.twig' %}

{% set pageTemplate = 'home' %}
{% set titleTag = 'home.titleTag'|trans %}
{% set metaDescription = 'home.metaDescription'|trans %}

{% block body %}
    <div class="form">
        <div class="form-text">
            <h1 class="form-text-title">Stay updated!</h1>
            <div class="form-text-info">
                <p>Join 60,000+ product managers receiving monthly updates on:</p>
                <div class="form-text-info-list">
                    <ul>
                        <li>Product discovery and building what matters</li>
                        <li>Measuring to ensure updates are a success</li>
                        <li>And much more!</li>
                    </ul>
                </div>
            </div>
            <div class="form-text-submit">
                <div class="form-text-submit-input">
                    <p>Email address</p>
                    <input class="" type="email" name="email" id="email" placeholder="email@company.com">
                    <p class="valid-text hidden">Valid email required</p>
                </div>
                <button class="btn" onclick="validateBtn($input)">Subscribe to monthly newsletter</button>
            </div>
        </div>
        <div class="form-img">
            <img src="{{ asset('build/img/illustration-sign-up-desktop.svg') }}" alt="">
        </div>
    </div>
    <div class="success hidden">
        <img class="success-img" src="{{ asset('build/img/icon-list.svg') }}" alt="">
        <div class="success-message">
            <h1 class="success-message-title">Thanks for subscribing!</h1>
            <p class="success-message-info">A confirmation email has been sent to <strong><b>ash@loremcompany.com</b></strong>. Please open it and click the button inside to confirm your subscription.</p>
        </div>
        <button class="btn" onclick="dismissBtn()">Dismis Message</button>
    </div>
{% endblock %}